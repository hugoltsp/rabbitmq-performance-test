{
    "users": [
        {
            "name": "hugoltsp",
            "password": "hugoltsp",
            "tags": "administrator"
        }
    ],
    "vhosts": [
        {
            "name": "/"
        }
    ],
    "permissions": [
        {
            "user": "hugoltsp",
            "vhost": "/",
            "configure": ".*",
            "write": ".*",
            "read": ".*"
        }
    ],
    "parameters": [],
    "policies": [
        {
            "vhost": "/",
            "name": "mirrorqueues",
            "apply-to": "queues",
            "pattern": "^.*",
            "definition": {
                "ha-mode": "exactly",
                "ha-params": 2,
                "ha-sync-mode": "automatic"
            }
        }
    ],
    "exchanges": [
        {
            "name": "my-exchange",
            "vhost": "/",
            "type": "fanout",
            "durable": true,
            "auto_delete": false,
            "internal": false,
            "arguments": {
                "alternate-exchange": "my-exchange-dlx"
            }
        },
        {
            "name": "my-exchange-dlx",
            "vhost": "/",
            "type": "fanout",
            "durable": true,
            "auto_delete": false,
            "internal": true,
            "arguments": {}
        }
    ],
    "queues": [
        {
            "name": "my-first-queue",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-dead-letter-exchange": "my-exchange-dlx",
                "x-dead-letter-routing-key": "my.first.queue.dlx",
                "x-queue-type": "quorum"
            }
        },
        {
            "name": "my-first-queue-dlq",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-queue-type": "classic"
            }
        },
        {
            "name": "my-second-queue",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-dead-letter-exchange": "my-exchange-dlx",
                "x-dead-letter-routing-key": "my.second.queue.dlx",
                "x-queue-type": "quorum"
            }
        },
        {
            "name": "my-second-queue-dlq",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-queue-type": "classic"
            }
        }
    ],
    "bindings": [
          {
            "source": "my-exchange",
            "vhost": "/",
            "destination": "my-first-queue",
            "destination_type": "queue",
            "routing_key": "my.first.queue",
            "arguments": {}
          },
          {
            "source": "my-exchange-dlx",
            "vhost": "/",
            "destination": "my-first-queue-dlq",
            "destination_type": "queue",
            "routing_key": "my.first.queue.dlx",
            "arguments": {}
          },
          {
            "source": "my-exchange",
            "vhost": "/",
            "destination": "my-second-queue",
            "destination_type": "queue",
            "routing_key": "my.second.queue",
            "arguments": {}
          },
          {
            "source": "my-exchange-dlx",
            "vhost": "/",
            "destination": "my-second-queue-dlq",
            "destination_type": "queue",
            "routing_key": "my.second.queue.dlx",
            "arguments": {}
          }
    ]
}